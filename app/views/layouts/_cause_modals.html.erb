        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <form enctype="multipart/form-data" onsubmit="event.preventDefault();">
            <input id="new_cause_intro" type="text" class="form-control">
            <textarea id="new_cause_detail" class="form-control"></textarea>
            <textarea id="new_cause_whymatters" class="form-control"></textarea>
