<!-- Posting cause modal -->
<div class="modal bnr-modal fade" id="causeModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
           <h4>Starting a New Cause</h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <% @cause = Cause.new %>
          <%= form_for @cause,:url =>{:controller=>"causes",:action=>"create"} do |f| %>
          <div class="form-group">
            <div class="row" style="padding-top:1em;">
              <div class="col-xs-6">
                <p><strong>Cause type</strong></p>
                <%= f.select :cause_type, options_for_select(get_all_cause_types), autofocus: true, class: ' form-control' %>
              </div>
              <div class="col-xs-6">
                <p><strong>Cause intro</strong></p>
                <%= f.text_field :intro, class: 'form-control', placeholder: 'A brief introduction' %>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-5 col-xs-offset-1">
                <p><strong>Cause detail</strong></p>
                <%= f.text_area :detail, cols: 20, rows: 3, class: 'question-detail form-control', placeholder: 'Please provide some detail' %>
              </div>
              <div class="col-xs-6">
                <p><strong>Why does it matter?</strong></p>
                <%= f.text_area :whymatters, cols: 20, rows: 3, class: 'question-detail form-control', placeholder: 'Why does this matter to you?' %>
              </div>
            </div>
          </div>

          <!-- Image upload -->
          <div class="row" style="border-left: 1px solid #e7e7e7;">
            <center>
              <%= f.file_field :image,class: 'btn' %> <br>
              <%= f.submit "Post Cause",class:'btn btn-squared btn-ask1'%>
            </center>
          </div>
          <%end%>
        </div>
      </section>
    </div>
  </div>
</div>

<!-- Modal for posting cause comment -->
<div class="modal bnr-modal fade" id="causeCommentModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
            <h4 id="cause-header"></h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <!-- create a new question using this modal -->
          <% @cause_comment = CauseComment.new %>
          <%= form_for @cause_comment, :url => { :controller =>"cause_comments", :action =>"create"}  do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: 5, class: 'form-control' %>
            <%= f.hidden_field :cause_id %>
          </div>
          <div class="row" style="padding-top:3em;">
            <center>
              <%= f.submit "Post Comment", class:'btn btn-squared btn-ask1'%>
            </center>
          </div>
          <%end%>
        </div>
      </section>
    </div>
  </div>
</div>

<!-- Editing cause modal -->
<div class="modal bnr-modal fade" id="editCauseModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
