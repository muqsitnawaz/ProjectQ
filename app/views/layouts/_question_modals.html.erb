<!-- Creating a question -->
<div class="modal bnr-modal fade" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
            <h4>New Question</h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <% @question = Question.new %>
          
          <%= form_for @question,:url =>{ :controller =>"questions", :action =>"create"}  do |f| %>
          <div class="form-group">
            <div class="row" style="padding-top:1em;">
              <div class="col-xs-12">
                <p><strong>Heading</strong></p>
                <%= f.text_field :content, autofocus: true, class:'form-control',placeholder: 'What do you want to ask?'%> <br>
              </div>
              
              <div class="col-xs-6">
                <p><strong>Detail</strong></p>
                <%= f.cktext_area :detail, cols: 20, rows: 3, class: 'question-detail form-control', placeholder: 'Please provide some detail' %>
              </div>
              
              <div class="col-xs-6">
                <p><strong>Category</strong></p>
                <%= f.select :topics, options_for_select(get_all_interests.sort!), {}, {:multiple => true, :size => 3 } %>
              </div>
            </div>
          </div>
          
          <div class="row" style="border-left: 1px solid #e7e7e7;">
            <center>
              <%= f.check_box :anonymous %> Ask Anonymously <br>
              <%= f.submit "Post",class:'btn btn-squared btn-ask1'%>
            </center>
          </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>

<!-- Edit question modal -->
<div class="modal bnr-modal fade" id="editQuestionModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
            <h4>Question</h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <form enctype="multipart/form-data" onsubmit="event.preventDefault();">
            <p><strong>Heading</strong></p>
            <input id="new_question_content" type="text" class="form-control"><br>
            
            <p><strong>Detail</strong></p>
            <textarea id="new_question_detail">null</textarea><br>

            <center>
              <input id="new_question_submit" type="submit" value="Update" class="btn btn-squared btn-ask1" />
            </center>
          </form>
        </div>
      </section>
    </div>
  </div>
</div>

