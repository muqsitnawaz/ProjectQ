<div class="row">
  <div class="col-xs-12">
    <div class="question-content">
      <input type="text" id="question-content<%= question.id %>" value="<%= question.content %>" hidden>
      <%= link_to question.content, questions_path(:id => question.id) %>
    </div>
    <br/>
    <div class="question-image">
      <%= question.image %>
    </div>
    <br/>
    <div class="question-details">
      <%= question.detail %>
    </div>

    <div class="small-details">
      <span id="views"><b>*</b> 44 views </span><span id="answers"><b>*</b> 4 answers</span>
    </div>

    <% if question.user_id != current_user.id %>
      <button id="answerQ<%= question.id %>">Answer</button>
      <% if !current_user.following.include? question.id %>
        <button id="follow<%= question.id %>">Follow</button>
      <% else %>
        <button class="following">Following</button>
      <% end %>
      <button>Share</button>
    <% end %>

    <div class="col-xs-11 col-xs-offset-1">
      <% if !answers.empty? %>
        <% if full == true %>
          <% answers.each do |answer| %>
            <%= render 'layouts/answer', :answer => answer %>
          <% end %>
        <% else %>
          <%= render 'layouts/answer', :answer => answers.sort_by {|a| a.upvotes }.reverse[0] %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<hr>