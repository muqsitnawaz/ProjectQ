<div style="border: 1px solid black; margin: 2px; padding: 5px;">
  <p><%= reply.reply %></p>
  <i>- <%= reply.user.name %></i>
  <br>

  <% if reply.user == current_user %>
    <button id="edit<%= reply.id %>">edit</button>
    <button> <%= link_to 'delete', replies_path(:id => reply.id), method: :delete, data: { confirm: 'Are you sure?'} %> </button>
  <% end %>
</div>