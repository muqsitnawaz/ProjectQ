<!-- Modal for editing a question -->
<div class="modal bnr-modal fade" id="editQuestionModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-xs-10">
            <h4>Question</h4>
          </div>
          <div class="col-xs-2">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>
        </div>
      </div>
      <section>
        <div class="modal-body modal-spa">
          <form enctype="multipart/form-data" onsubmit="event.preventDefault();">
            <input id="new_question_content" type="text" class="form-control">
            <textarea id="new_question_detail" class="form-control"></textarea>
            <br>

            <center>
              <input id="new_question_submit" type="submit" value="Update Question" class="btn btn-squared btn-ask1" />
            </center>
          </form>
        </div>
      </section>
    </div>
  </div>
</div>

