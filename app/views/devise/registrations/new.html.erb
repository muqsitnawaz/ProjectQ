<div class="main-login">
  <br/><br/>
  <div class="row">
    <div class="col-md-4 col-md-offset-7 login-div">
      <div class="row">
        <div class="login-heading">
          <h1>Login</h1>
          <!--login heading   -->
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row fields">
          <%= f.text_field :name, autofocus: true,class: 'form-fields',placeholder: 'Name' %>
      </div>
      <br/>
      <div class="row fields">
          <%= f.email_field :email, autofocus: true,class: 'form-fields',placeholder: 'Email' %>
      </div>
      <br/>
      <div class="row fields">
        <% if @minimum_password_length %>

        <% end %>
        <%= f.password_field :password, autocomplete: "off",class: 'form-fields',placeholder: 'Password' %>
      </div>
      <br/>
      <div class="row fields">
        <% if @minimum_password_length %>

        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-fields',placeholder: 'Confirm Password' %>
      </div>
      <!-- for button of login -->
      <br/>
      <div class="row sign-in">
          <!-- use for the button using rb -->
            <%= f.submit "SIGN UP", class:"btn btn-login" %>
      </div>
      <!--  remeber me-->
      <br/>
      <div class="row remember">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      <% end -%>
      </div>
      
      <!--sign up  -->
      <div class="row">
        <div class="pull-right">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="">
    </div>
  </div>
</div>
