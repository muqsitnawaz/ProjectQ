<div class="background-div">
  <div class="container">
    <ul class="nav nav-tabs other-tabs" style="padding-top:-1.3em;padding-left:1.5em;">
      <li ><%= link_to 'Read Articles', articles_path %></li>
      <li ><%= link_to 'Write an Article', new_article_path %></li>
      <li class="active"><%= link_to 'Request Articles', new_article_request_path %></li>
      <li><%= link_to 'Answer Requests', article_requests_path %></li>
    </ul>
    <div class="row">
      <div class="col-md-8 cause-block">
        <h2>Request an Article on ProjectQ</h2><br>
        <%= form_for @article_request, :url => {:controller =>"article_requests", :action =>"create"} do |f| %>
          <p><strong>Topics</strong></p>
          <%= f.select :topics, options_for_select(get_all_interests.sort!), {}, {:multiple => true, :size => 3 } %> <br>
  
          <p><strong>Heading</strong></p>
          <%= f.text_field :heading, autofocus: true, class: 'form-control',placeholder: 'A heading for your request' %> <br>
  
          <p><strong>Explanation (Optional)</strong></p>
          <%= f.text_area :explanation, class: 'form-control', placeholder: 'Explanation goes here...' %><br>
  
          <%= f.submit "Create", class:'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>






