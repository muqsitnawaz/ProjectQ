<div class="container main-wall">
  <div class="row">
    <!-- Leftbar  -->
    <div class="col-xs-2">
      <%= render 'layouts/leftbar'%>
    </div>

    <!-- Questions area -->
    <div class="col-xs-7">
      <div class="question-area">
        <%= render 'question', :question => @question, :answers => @question.answers.order('created_at DESC'), :full => true %>
      </div>
    </div>

    <!-- Suggestions -->
    <div class="col-xs-3">
      <%= render 'layouts/suggestions'%>
    </div>
  </div>
</div>

<%= javascript_include_tag "questions_script", "data-turbolinks-track" => true  %>