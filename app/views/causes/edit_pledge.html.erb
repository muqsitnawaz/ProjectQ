<div class="background-div">
  <div class="container">
    <div class="row">
        <div class="col-md-8 cause-block">
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                  <h2>People can Help By</h2>
                </div>
            </div>
            <%= form_for @cause,:url =>{:controller=>"causes",:action=>"update_pledge",:cause_id =>@cause.id} do |f| %>
            <!--fields-->
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                    <div class="field">
                        <%= f.text_field :pledgeTo, autofocus: true,class: 'form-control',placeholder: 'What are you pledging ?'%><br/>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                    <div class="field">
                        <%= f.text_field :pledgeStep, autofocus: true,class: 'form-control',placeholder: 'What Steps will you take for this ?'%><br/>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                    <div class="field">
                        <%= f.text_field :howhelp, autofocus: true,class: 'form-control',placeholder: 'What does this pledge help people?'%><br/>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                    <div class="field">
                        <%= f.date_field :pledgeDate, autofocus: true,class: 'form-control',placeholder: 'What does this end?'%><br/>
                    </div>
                </div>
            </div>
        
            <div class="row">
                <div class = "col-xs-offset-1 col-xs-10">
                    <div class="field">
                        <%= f.text_field :totalpeople, autofocus: true,class: 'form-control',placeholder: 'How many signatures do you need?'%><br/>
                    </div>
                </div>
            </div>
            <%= f.submit "Update Pledge",class:'btn btn-ask1'%>
        </div>
        
        <%end%>
        
    </div>
</div>
</div>